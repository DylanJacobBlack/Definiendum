<div class="flex remaining-height w-screen">
  <div class="hidden w-1/6 md:block lg:block xl:block bg-gray-200 border-r-2 shadow-lg mr-2">
    <div class="p-2"><%= image_tag 'card-left', class: 'rounded-xl' %></div>
    <div class="p-4 text-xl font-bold"><%= @lesson.title %></div>
  </div>
  <div class="flex flex-row w-5/6 text-xl">
    <div class="flex flex-col justify-center text-4xl p-12 cursor-pointer bg-green-100 hover:bg-green-200 duration-500 border shadow-lg rounded-xl border-black m-3" id="back"><i class="fas fa-chevron-left"></i></div>
    <div class="px-12 flex-grow py-12" id="page_1">
      <%= simple_format(@pages[0] + ".") %>
    </div>
    <% @pages.each_with_index do |page, i| %>
      <% unless i == 0 %>
        <div class="hidden flex-grow py-12" id="page_<%= i + 1 %>"><%= simple_format(page + ".") %></div>
      <% end %>
    <% end %>
    <div class="flex flex-col justify-center text-4xl p-12 cursor-pointer bg-green-100 hover:bg-green-200 duration-500 border shadow-lg rounded-xl border-black m-3" id="next"><i class="fas fa-chevron-right"></i></div>
  </div>
</div>



<div class="hidden min-w-screen h-screen animated fadeIn faster  fixed  left-0 top-0 flex justify-center items-center inset-0 z-50 outline-none focus:outline-none bg-no-repeat bg-center bg-cover" id="modal">
  <div class="absolute bg-black opacity-80 inset-0 z-0"></div>
    <div class="w-full  max-w-lg p-5 relative mx-auto my-auto rounded-xl shadow-lg  bg-white ">
      <div class="">
        <div class="text-center p-5 flex-auto justify-center">
          <h2 class="text-xl font-bold py-4" id="selected"></h2>
          <p class="text-sm text-gray-500 px-8" id="definition"></p>
        </div>
        <div class="p-3 mt-2 text-center space-x-4 md:block">
          <button class="mb-2 md:mb-0 bg-white px-5 py-2 text-sm shadow-sm font-medium tracking-wider border text-gray-600 rounded-full hover:shadow-lg hover:bg-gray-100" id="cancel">Cancel</button>
          <button class="mb-2 md:mb-0 bg-red-500 border border-red-500 px-5 py-2 text-sm shadow-sm font-medium tracking-wider text-white rounded-full hover:shadow-lg hover:bg-red-600" id="select">Select Definition</button>
        </div>
      </div>
    </div>
  </div>
</div>
